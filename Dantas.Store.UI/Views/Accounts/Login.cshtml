@model Dantas.Store.UI.Models.LoginVM

@{
    ViewBag.Title = "Login";
}

<h3>
    @ViewBag.Title
</h3>

<div class="row">
    <form class="col-md-6 col-sm-12" method="post">
        <div class="form-group">
            <label>Email</label>
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", autofocus = "" })
            <small>
                @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
            </small>
        </div>
        <div class="form-group">
            <label>Password</label>
            @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
            <small>
                @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })
            </small>
        </div>
        <div class="form-check">
            @Html.CheckBoxFor(model => model.RememberLogin, new { @class="form-check-input"})
            <label class="form-check-label" for="RememberLogin">Remember Login</label>
        </div>
        <div class="form-group mt-3">
            <button class="btn btn-success">Login</button>
            <a class="btn btn-outline-secondary" href="@Url.Action("Index","Home")">Return</a>

        </div>

    </form>
</div>

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.my.validation.js"></script>
}