@model Dantas.Store.UI.Models.Product

@{
    ViewBag.Title = $"{ (Model.Id == 0 ? "New Product" : "Edit Product")}";
}

<h2 class="mt-3">@ViewBag.Title</h2>

<div>@Html.ValidationSummary(true)</div>

<form method="post">
    <div class="form-group">
        <label for="txtName">Name</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", autofocus = "" })
        <small>
            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
        </small>
    </div>
    <div class="form-group">
        <label>Price</label>
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
        <small>
            @Html.ValidationMessageFor(m => m.Price, null, new { @class = "text-danger" })
        </small>
    </div>

    <div class="form-group">
        <label>Type</label>
        @Html.DropDownListFor(m => m.ProductTypeId, new SelectList(ViewBag.Types, "Id", "Name"),
            "Choose...",
            new { @class = "form-control" })
        <small>
            @Html.ValidationMessageFor(m => m.ProductTypeId, null, new { @class = "text-danger" })
        </small>
    </div>
    <div class="form-group">
        <label>Quantity</label>
        @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control" })
        <small>
            @Html.ValidationMessageFor(m => m.Quantity, null, new { @class = "text-danger" })
        </small>
    </div>
    <div>
        <input class="btn btn-success" type="submit" value="Save">
        <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
    </div>
</form>

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.my.validation.js"></script>
}  